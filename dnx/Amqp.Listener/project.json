{
    "version": "1.1.8",

    "compile": [
        "../../src/Properties/AssemblyInfo.cs",
        "../../src/Properties/Version.cs",
        "../../src/Listener/*.cs"
    ],

    "dependencies": {
        "Amqp": "1.1.8-*"
    },

    "compilationOptions": {
        "keyFile": "../../src/amqp.snk",
